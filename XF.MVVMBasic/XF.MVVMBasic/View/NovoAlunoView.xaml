<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.MVVMBasic.View.NovoAlunoView"
             Title="Novo Aluno">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Placeholder="Informe seu nome" Text="{Binding AlunoModel.Nome}"/>
            <Entry Placeholder="Informe seu RM" Text="{Binding AlunoModel.RM}"/>
            <Entry Placeholder="Informe seu E-mail" Text="{Binding AlunoModel.Email}"/>
            <Button Text="Salvar" Clicked="Button_Clicked"/>
            <Button Text="Cancelar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>